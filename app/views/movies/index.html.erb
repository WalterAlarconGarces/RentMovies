<p style="color: green"><%= notice %></p>
<div id="div_movies">
  <h1>Movies</h1>
  <%= form_with url: movies_path, method: :get do |form|%>
    <%= form.text_field :query_text, placeholder: 'Title or client', value: params[:query_text]%>
    <button class="btn btn-outline-success" type="submit">Search</button>
  </div>
<%end%>
<div id="movies">
  <div class="container text-center">
    <div class="row row-cols-4">
      <% @movies.each do |movie| %>
        <%= render movie %>
      <% end %>
    </div>
  </div>
</div>
<div class="container ">
<div class="row ">
<div class="col"></div>
  <div class="col">
    <p><%=raw pagy_nav(@pagy)%></p>
  </div>
  <div class="col"></div>
</div>
</div>
