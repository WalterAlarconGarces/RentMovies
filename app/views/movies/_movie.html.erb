<div id="<%= dom_id movie %>" class="col">
  <div class="card" >
    <div class="card-body">
      <h5 class="card-title">Title: <%= movie.name %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">ID: <%=movie.id%></h6>
      
      <% if movie.client_id != nil %>
        <p>Rented by: <%= Client.find(movie.client_id)[:name] %></p>
      <% else %>
        <p>Rented by: No one</p>
      <% end %>
      <%= link_to "Show this movie", movie %>
    </div>
  </div>
</div>
